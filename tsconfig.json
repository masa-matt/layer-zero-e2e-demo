{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"]
  },
  "include": [
    "deploy",
    "hardhat.config.ts",
    "test",
    "tasks",
    "src"
  ],
  "exclude": [
    "node_modules"
  ],
}
