{
  "compilerOptions": {
    "target": "es2020",
    "module": "node16",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true
  },
  "include": [
    "networks.config*.json",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
