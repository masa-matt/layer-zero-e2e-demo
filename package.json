{
  "name": "layer-zero-e2e",
  "version": "1.0.0",
  "license": "ISC",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prettier": "prettier --write 'e2e/**/*.ts' 'packages/**/*.ts'",
    "build": "$npm_execpath run -r build",
    "build-image": "docker build --no-cache -t layer-zero-e2e-base -f docker/Dockerfile.base .",
    "clean": "find . -name 'node_modules' -type d -prune -exec rm -rf '{}' +",
    "clear": "docker compose down --rmi all && rm -rf deployments/*",
    "start": "$npm_execpath run clear && docker compose up",
    "demo-oft": "npx hardhat --network sepolia demo-oft --dst-network bcs",
    "check-oft": "npx hardhat --network bcs check-oft"
  },
  "dependencies": {
    "@e2e/oapp": "workspace:^",
    "@e2e/typechain": "workspace:^",
    "@e2e/utils": "workspace:^",
    "@layerzerolabs/devtools-evm-hardhat": "^0.3.20",
    "@layerzerolabs/lz-definitions": "^2.3.28",
    "@layerzerolabs/lz-v2-utilities": "^2.3.28",
    "@layerzerolabs/toolbox-hardhat": "^0.2.35",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@typechain/hardhat": "^9.1.0",
    "@types/node": "^20.14.9",
    "dotenv": "^16.4.5",
    "ethers": "5.7.2",
    "hardhat": "^2.22.6",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-deploy": "^0.12.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "resolutions": {
    "@nomicfoundation/edr": "0.3.5",
    "ethers": "^5.7.2",
    "hardhat-deploy": "^0.12.1"
  },
  "pnpm": {
    "overrides": {
      "@nomicfoundation/edr": "0.3.5",
      "ethers": "^5.7.2",
      "hardhat-deploy": "^0.12.1"
    }
  },
  "overrides": {
    "@nomicfoundation/edr": "0.3.5",
    "ethers": "^5.7.2",
    "hardhat-deploy": "^0.12.1"
  },
  "devDependencies": {
    "prettier": "^3.3.2"
  }
}
